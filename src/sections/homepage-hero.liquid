

<div class="c-hero">
    <div class="c-hero__content">
        <h1>{{ section.settings.title }}</h1>
        <p>{{ section.settings.sub-title }}</p>
    </div>
</div>

{% schema %}
  {
    "name": "Homepage Hero",
    "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Hello world"
    },
    {
        "type": "text",
        "id": "sub-title",
        "label": "Sub Heading",
        "default": ""
    },
    {
        "type": "image_picker",
        "id": "image-desktop",
        "label": "Image Desktop"
    },
    {
        "type": "image_picker",
        "id": "image-mobile",
        "label": "Image Mobile"
    },
    {
        "type": "checkbox",
        "id": "image-shader",
        "label": "Set Image Shader.",
        "default": true
    }
    ],
    "presets": [
      {
        "name": "Homepage Hero",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

{% if section.settings.image-desktop != blank %}

<style>
    .c-hero {
        background-image: url('{{ section.settings.image-mobile | img_url: "master" }}');
    }
    {% if section.settings.image-shader %}
    .c-hero::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(50, 50, 50, 0.4);
    }
    {% endif %}
    @media only screen and (min-width: 640px) {
        .c-hero {
            background-image: url('{{ section.settings.image-desktop | img_url: "master" }}');
        }
    }
</style>
{% endif %}
